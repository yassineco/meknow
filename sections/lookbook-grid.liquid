<style>
  .lookbook-grid {
    padding: var(--spacing-xl) var(--spacing-md);
  }
  
  .lookbook-grid__header {
    text-align: center;
    margin-bottom: var(--spacing-lg);
  }
  
  .lookbook-grid__title {
    color: var(--color-accent);
    margin-bottom: var(--spacing-sm);
  }
  
  .lookbook-grid__items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .lookbook-item {
    position: relative;
    overflow: hidden;
    border-radius: var(--border-radius);
    aspect-ratio: 3/4;
  }
  
  .lookbook-item__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .lookbook-item:hover .lookbook-item__image {
    transform: scale(1.05);
  }
  
  .lookbook-item__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--spacing-md);
    background: linear-gradient(to top, rgba(11,11,12,0.9), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .lookbook-item:hover .lookbook-item__overlay {
    opacity: 1;
  }
  
  .lookbook-item__title {
    color: var(--color-accent);
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }
</style>

<div class="lookbook-grid section">
  {%- if section.settings.title != blank -%}
    <div class="lookbook-grid__header">
      <h2 class="lookbook-grid__title">{{ section.settings.title }}</h2>
      {%- if section.settings.description != blank -%}
        <p>{{ section.settings.description }}</p>
      {%- endif -%}
    </div>
  {%- endif -%}
  
  <div class="lookbook-grid__items">
    {%- for block in section.blocks -%}
      <a href="{{ block.settings.link | default: '#' }}" class="lookbook-item" {{ block.shopify_attributes }}>
        {%- if block.settings.image != blank -%}
          <img
            class="lookbook-item__image"
            src="{{ block.settings.image | image_url: width: 600 }}"
            alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
            loading="lazy"
            width="600"
            height="800"
          >
        {%- endif -%}
        
        <div class="lookbook-item__overlay">
          {%- if block.settings.title != blank -%}
            <h3 class="lookbook-item__title">{{ block.settings.title }}</h3>
          {%- endif -%}
          {%- if block.settings.subtitle != blank -%}
            <p>{{ block.settings.subtitle }}</p>
          {%- endif -%}
        </div>
      </a>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Lookbook Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre de la section",
      "default": "Nos Collections"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "lookbook_item",
      "name": "Image Lookbook",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Sous-titre"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Lien"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lookbook Grid",
      "blocks": [
        {
          "type": "lookbook_item"
        },
        {
          "type": "lookbook_item"
        },
        {
          "type": "lookbook_item"
        }
      ]
    }
  ]
}
{% endschema %}
