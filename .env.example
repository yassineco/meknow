# MeNow E-commerce Environment Configuration
# Copy this file to .env.production and update the values

# Application
NODE_ENV=production
PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=meknow_production
DB_USER=meknow_user
DB_PASSWORD=your_secure_database_password_here

# JWT Configuration  
JWT_SECRET=your_super_secure_jwt_secret_here
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Security
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change_this_password

# Application URLs
BASE_URL=https://yourdomain.com
API_BASE_URL=https://yourdomain.com/api

# Monitoring
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=30000

# Sécurité JWT
JWT_SECRET=meknow-super-secret-jwt-key-change-this-in-production-very-long-and-secure

# Autres paramètres
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./public/images

# CORS Origins (séparés par des virgules)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:8080,https://meknow.fr