# =====================================================
# MEKNOW E-COMMERCE - ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env or .env.production and update the values

# =====================================================
# APPLICATION
# =====================================================
NODE_ENV=production
PORT=9000

# =====================================================
# DATABASE POSTGRESQL
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=meknow_production
DB_USER=meknow_user
DB_PASSWORD=your_secure_database_password_here

# =====================================================
# JWT & AUTHENTICATION
# =====================================================
JWT_SECRET=meknow-super-secret-jwt-key-change-this-in-production-very-long-and-secure
JWT_EXPIRES_IN=7d
ADMIN_EMAIL=admin@meknow.fr
ADMIN_PASSWORD=change_this_password

# =====================================================
# FILE UPLOAD
# =====================================================
UPLOAD_DIR=./public/images
MAX_FILE_SIZE=5242880

# =====================================================
# SECURITY & CORS
# =====================================================
CORS_ORIGIN=https://meknow.fr,https://www.meknow.fr,http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# =====================================================
# APPLICATION URLs
# =====================================================
BASE_URL=https://meknow.fr
API_BASE_URL=https://meknow.fr/api
NEXT_PUBLIC_API_URL=https://meknow.fr/api

# =====================================================
# LOGGING & MONITORING
# =====================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_DIR=/var/log/meknow
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=30000


# CORS Origins (séparés par des virgules)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:8080,https://meknow.fr