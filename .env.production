# üöÄ Meknow E-commerce - Configuration Production
# Variables d'environnement pour d√©ploiement production

# Environnement
NODE_ENV=production
ENVIRONMENT=production

# Domaine et URLs
DOMAIN=meknow.fr
NEXT_PUBLIC_BASE_URL=https://meknow.fr
NEXT_PUBLIC_API_URL=https://meknow.fr
API_URL=http://localhost:9000

# Ports
PORT=9000
FRONTEND_PORT=3000
DATABASE_PORT=5432

# Base de donn√©es PostgreSQL
DATABASE_URL=postgresql://postgres:meknow2024!@localhost:5432/meknow_production
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=meknow2024!
DB_NAME=meknow_production

# S√©curit√© (G√©n√©rer avec: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production

# Fonctionnalit√©s Meknow
ENABLE_RUBRIQUES=true
ENABLE_LOOKBOOK=true
ENABLE_ADMIN_INTERFACE=true
ENABLE_PM2_MONITORING=true

# Upload et fichiers
UPLOAD_DIR=/app/uploads
STATIC_DIR=/app/public
MAX_FILE_SIZE=10MB

# CORS et s√©curit√©
CORS_ORIGIN=https://meknow.fr
ALLOWED_HOSTS=meknow.fr,www.meknow.fr,localhost

# Logs
LOG_LEVEL=info
LOG_DIR=/app/logs

# SSL/TLS
FORCE_HTTPS=true
SSL_CERT_PATH=/etc/letsencrypt/live/meknow.fr/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/meknow.fr/privkey.pem

# Performance
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65000

# Monitoring
HEALTHCHECK_ENABLED=true
METRICS_ENABLED=true

